#!/bin/bash

## run scala with all the GATE jars and the Ontology plugin jars on the classpath 

if [ "$GATE_HOME" == "" ] 
then
  echo The environment variable GATE_HOME must be set
  exit 1
fi

PRG="$0"
while [ -h "$PRG" ] ; do
  ls=`ls -ld "$PRG"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "$PRG"`"/$link"
  fi
done
s=`dirname "$PRG"`/.. 
pushd $s > /dev/null
s=`pwd`
popd > /dev/null

#scala -deprecation -i "$s/bin/init.scala" -cp "$s/lib/ScalaReflection.jar:${GATE_HOME}/bin/gate.jar:${GA}/lib/*:${GATE_HOME}/plugins/Ontology/Ontology.jar:${GATE_HOME}/plugins/Ontology/lib/*:$s/../javalib/*"  "$@"

scala -deprecation -i "$s/bin/init.scala" -cp "$s/lib/ScalaReflection.jar:${GATE_HOME}/bin/gate.jar:${GATE_HOME}/lib/*:$s/../javalib/*" "$@"
